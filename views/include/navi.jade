.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      button.btn.btn-navbar(type='button', data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.brand(href='./index.html') OpenBus
      .nav-collapse.collapse
        ul.nav
          li
            a#geolocation(href='#') Aktuelle Position
          li
            a#geolocation(href='#') Haltestelle finden
        form.hidden-phone.navbar-search.pull-left
          input#stations.search-query.span2(type="text", placeholder="Haltestelle suchen")
        ul.nav.pull-right
          each item in navigation
            if item.active === true
              li.active
                a(href='#{item.href}') #{item.text}
            else
              li
                a(href='#{item.href}') #{item.text}